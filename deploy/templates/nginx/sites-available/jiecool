# JieCool 站点配置
# 域名: your-domain.com (请根据实际情况修改)
# 前端端口: 80 (HTTP)
# 后端端口: 8080 (内部代理)

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;

    # 前端静态文件服务
    location / {
        root /home/jiecool/frontend/out;
        index index.html index.htm;
        try_files $uri $uri/ /index.html;

        # 静态资源缓存配置
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
            add_header Vary Accept-Encoding;
        }

        # HTML 文件缓存配置
        location ~* \.html$ {
            expires 1h;
            add_header Cache-Control "public, must-revalidate";
        }
    }

    # API 代理配置
    location /api/ {
        proxy_pass http://127.0.0.1:8080/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # 超时配置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # 缓冲配置
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;

        # API 速率限制
        limit_req zone=api burst=20 nodelay;
    }

    # 文件上传接口特殊配置
    location /api/file/upload {
        proxy_pass http://127.0.0.1:8080/api/file/upload;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 上传文件大小限制
        client_max_body_size 100M;

        # 上传速率限制
        limit_req zone=upload burst=5 nodelay;

        # 延长超时时间
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    # 文件下载接口
    location /api/file/download/ {
        proxy_pass http://127.0.0.1:8080/api/file/download/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 下载文件大小限制
        client_max_body_size 1G;

        # 支持断点续传
        proxy_set_header Range $http_range;
        proxy_set_header If-Range $http_if_range;
    }

    # 缩略图接口
    location /api/file/thumbnail/ {
        proxy_pass http://127.0.0.1:8080/api/file/thumbnail/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 缩略图缓存
        expires 1d;
        add_header Cache-Control "public, must-revalidate";
    }

    # 健康检查接口
    location /api/health {
        proxy_pass http://127.0.0.1:8080/api/health;
        access_log off;

        # 快速响应
        proxy_connect_timeout 5s;
        proxy_send_timeout 5s;
        proxy_read_timeout 5s;
    }

    # 拒绝访问隐藏文件
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # 拒绝访问配置文件
    location ~* \.(conf|config|ini|log|sh|bat|exe)$ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # 安全配置
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'self';" always;

    # 隐藏 Nginx 版本
    server_tokens off;

    # 自定义错误页面
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;

    location = /404.html {
        root /home/jiecool/frontend/out;
        internal;
    }

    location = /50x.html {
        root /home/jiecool/frontend/out;
        internal;
    }
}